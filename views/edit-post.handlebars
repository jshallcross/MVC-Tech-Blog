<div class="container login-container">
            <div class="row">
                <div class="col-md-6 login-form">
                    <h3>Edit A Post</h3>
                    <form class="edit-post-form ">
                        <div class="form-group">
                            
                            <input name="post-title" type="text" value="{{post.title}}" />
                        </div>
                        <div class="form-group">
                            <input name="post-data" type="text" value="{{post.post_data}}" />
                        </div>
                        <div class="form-group">
                            <input type="submit" class="btnSubmit" value="Save Post" />
                            <input type="submit" class="delete-post-btn" id="btnSubmit" value="Delete Post" />
                        </div>
                    </form>
                </div>
            </div>
</div>




<script src="/javascript/edit-post.js"></script>
<script src="/javascript/delete-post.js"></script>
