<div class="container login-container">
            <div class="row">
                <div class="col-md-6 login-form">
                    <h3>Create New Post</h3>
                    <form class="new-post-form ">
                        <div class="form-group">
                            <input type="text" id="post-title" name="post-title" class="form-control" placeholder=" Your Title *" value="" />
                        </div>
                        <div class="form-group">
                            <input type="text" id="post-data" name="post-data" class="form-control" placeholder="Your Content *" value="" />
                        </div>
                        <div class="form-group">
                            <input type="submit" class="btnSubmit" value="Create" />
                        </div>
                    </form>
                </div>
            </div>
</div>





{{#if posts.length}}
<section>
  <h2>Your Posts</h2>
  <ul class="post-list">
    {{#each posts as |post|}}
    <li>
      {{> post-data post}}
      <a href="/dashboard/edit/{{post.id}}" class="edit-link">Edit post</a>
    </li>
    {{/each}}
  </ul>
</section>
{{/if}}

<script src="/javascript/add-post.js"></script>